<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_save_after">
        <observer name="xtremepush_module_observer_checkoutupdated" instance="Xtremepush\Module\Observer\CheckoutCartSavedObserver" />
    </event>

    <event name="sales_order_place_after">
        <observer name="xtremepush_module_observer_orderplaced" instance="Xtremepush\Module\Observer\OrderPlacedObserver" />
    </event>
    <event name="sales_order_save_after">
        <observer name="xtremepush_module_observer_ordersaved" instance="Xtremepush\Module\Observer\OrderSavedObserver" />
    </event>
    <event name="admin_sales_order_address_update">
        <observer name="xtremepush_module_observer_orderaddressupdated" instance="Xtremepush\Module\Observer\OrderAddressUpdatedObserver" />
    </event>

    <event name="customer_account_edited">
        <observer name="xtremepush_module_observer_customeredited" instance="Xtremepush\Module\Observer\CustomerUpdatedObserver" />
    </event>
    <event name="customer_register_success">
        <observer name="xtremepush_module_observer_customerregistered" instance="Xtremepush\Module\Observer\CustomerRegisteredObserver" />
    </event>
    <event name="customer_delete_after">
        <observer name="xtremepush_module_observer_customerdeleted" instance="Xtremepush\Module\Observer\CustomerDeletedObserver" />
    </event>
    <event name="adminhtml_customer_save_after">
        <observer name="xtremepush_module_observer_customersaved" instance="Xtremepush\Module\Observer\CustomerSavedObserver" />
    </event>
    <event name="newsletter_subscriber_save_after">
        <observer name="xtremepush_module_observer_newslettersaved" instance="Xtremepush\Module\Observer\NewsletterSavedObserver" />
    </event>
</config>
